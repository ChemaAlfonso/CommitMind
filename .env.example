# Security - IMPORTANT: Generate strong random tokens
API_TOKEN=your-long-random-api-token-here
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
GITLAB_WEBHOOK_TOKEN=your-gitlab-webhook-token

# GitHub/GitLab Access Tokens
GITHUB_PAT=your-github-personal-access-token
GITLAB_PAT=your-gitlab-personal-access-token

# Grafana Authentication
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=your-strong-grafana-password

# AI Summary Configuration
# Choose provider: 'openai' or 'anthropic'
AI_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Bot Scheduling (optional, defaults shown)
TZ=Europe/Madrid                  # Timezone for scheduling
REPORT_DAY=5                      # Day of week (0=Sunday, 5=Friday)
REPORT_HOUR=17                    # Hour of day (24-hour format)
RUN_ON_START=false                # Run summary immediately on container start

# Polling Configuration (optional)
POLLING_INTERVAL_MINUTES=never    # Set to number like '60' for hourly polling, 'never' to disable
POLLING_LOOKBACK_HOURS=24         # How many hours back to check for changes during polling

# Logging Configuration (optional)
LOG_LEVEL=info                    # Log level: debug, info, warn, error (default: info for prod, debug for dev)
LOG_TO_CONSOLE=true               # Log to console output (default: true)
LOG_TO_FILE=true                  # Log to file in /logs directory (default: true)
LOG_FILE_LEVEL=info               # File log level, can be different from console (default: same as LOG_LEVEL)

# Reporting Configuration (optional)
REPORTS_LANGUAGE=English          # Language for AI-generated reports (e.g., English, Español, Français)